<div id="<%= dom_id friend %>">
  <p>
    <strong>Full name:</strong>
    <%= link_to friend.first_name + ' ' + friend.last_name, friend%>

  </p>

  <p>
    <strong>Email:</strong>
    <%= friend.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= friend.phone %>
  </p>

  <p>
    <strong>Twitter:</strong>
    <%= friend.twitter %>
  </p>

</div>
